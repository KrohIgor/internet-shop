        <servlet-name>allProducts</servlet-name>
        <url-pattern>/products/all</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>allProductsForAdministrator</servlet-name>
        <servlet-class>mate.academy.internet.shop.controllers.GetAllProductsForAdministratorController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>allProductsForAdministrator</servlet-name>
        <url-pattern>/products/allForAdministrator</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>allOrders</servlet-name>
        <servlet-class>mate.academy.internet.shop.controllers.GetAllOrdersController</servlet-class>
    </servlet>
