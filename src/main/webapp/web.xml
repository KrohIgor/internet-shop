    </servlet>
    <servlet-mapping>
        <servlet-name>userOrders</servlet-name>
        <url-pattern>/orders/userOrders</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>viewOrder</servlet-name>
        <servlet-class>mate.academy.internet.shop.controllers.GetOrderController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>viewOrder</servlet-name>
        <url-pattern>/viewOrder</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>mate.academy.internet.shop.controllers.LoginController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    
    <filter>
        <filter-name>authenticationFilter</filter-name>
        <filter-class>mate.academy.internet.shop.wab.filters.AuthenticationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>authenticationFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>
